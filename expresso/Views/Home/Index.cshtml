@using EXPRESSO.Models;

@{
    ViewBag.Title = "Home Page";
}

<!-- ========== Home ========== -->
<div id="home" data-stellar-background-ratio="0.5" style="background-image: url(/Uploads/@ViewBag.Header.Background_img)">
    <div class="text">
        <h1 class="wow fadeInUp" data-wow-duration="2s" data-wow-delay="0.5s">@ViewBag.Header.SupTitle</h1>
        <h1 class="wow fadeInUp" data-wow-duration="2s" data-wow-delay="1.2s">@ViewBag.Header.Title </h1>
        <h3 class="wow fadeInUp" data-wow-duration="2s" data-wow-delay="2s">@ViewBag.Header.SubTitle</h3>
    </div>
    <a href="#about" class="bouncing-icon"><i class="fa fa-angle-double-down"></i></a> <!-- Bouncing Icon -->
</div>
<!-- ========== End Of Home ========== -->
<!-- ========== About ========== -->
<div id="about">
    <div class="heading">
        <h1>About expresso</h1>
        <hr>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-6">

                <img src="~/Uploads/@ViewBag.About.Photo" alt="image" class="img-responsive wow fadeIn" data-wow-delay="0.4s"> <!-- Profile Image -->
            </div>
            <div class="col-xs-12 col-sm-12 col-md-6">
                <h3>@ViewBag.About.Title</h3>
                <p>@ViewBag.About.Content1</p>
                <p>@ViewBag.About.Content2</p>
                <div class="col-md-6 downloadmenu">
                    <a href="#" class="downloadmenu-btn btn">Download Menu</a>
                </div>
                <div class="col-md-6 seegallery">
                    <a href="#gallery" class="seegallery-btn btn">See Gallery</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ========== End Of About ========== -->
<!-- ========== Services ========== -->
<div id="service">
    <div class="service-bg">
        <div class="heading">
            <h1>What We Offer</h1>
            <hr>
        </div>
        <div class="container">
            <div class="row">
                <!-- First Service Item -->
                @foreach(Service sv in ViewBag.Services)
                {
                     <div class="col-sm-6 col-md-4 wow fadeIn" data-wow-delay="0.2s">
                    <div class="back">
                        <i class="fa @sv.Icon fa-2x" aria-hidden="true"></i>
                        <div class="subtitle">@sv.Title</div><!-- Edit Title -->
                        <p>@sv.Content.</p> <!-- Edit description -->
                    </div>
                </div>
                }

               
                
               
            </div>
        </div>
    </div>
    <!-- ========== Featured Drinks ========== -->
    <div class="heading">
        <h1>Featured Drinks</h1>
        <hr>
    </div>
    <div class="container">
        <div class="row">
            @foreach(Drink dr in ViewBag.Drinks)
            {
            <div class="col-xs-12 col-sm-6 col-md-4">
                <div class="single-drink wow fadeIn" data-wow-delay="0.2s">
                    <div class="frame">
                        <img src="~/Uploads/@dr.Photo" alt="image" class="img-responsive">
                    </div>
                    <div class="subtitle">@dr.Title</div>
                    <p>@dr.Content</p>
                </div>
            </div>
            }
           
        
        </div>
    </div>
    <!-- ========== End Of Featured Drinks ========== -->
    <!-- ========== Marketing ========== -->
    <div id="marketing">
        <div class="container">
            <h1>@ViewBag.Section.Title</h1>
            <p>@ViewBag.Section.Content</p>
        </div>
    </div>
    <!-- ========== End Of Marketing ========== -->
</div>
<!-- ========== End Of Service ========== -->
<!-- ========== Gallery ========== -->
<div id="gallery">
    <div class="heading">
        <h1>Gallery</h1>
        <hr>
    </div>
    <ul class="gallery-list text-center">
      @foreach (GalerryFilter gf in ViewBag.GalleryFilter)
      {
        <li class="filter" data-filter="all">@gf.Name</li>

      }


      
    </ul>
    <div class="container" id="parent">
        <div class="row">
            <!-- First gallery Item -->
            @foreach(Gallery gl in ViewBag.Gallery)
            {
            <div class="col-sm-6 col-md-4 mix @gl.classname">
                <div class="gallery-item">
                    <img src="~/Uploads/@gl.Photo" alt="image" class="img-responsive"> <!-- Edit Image -->
                    <div class="overlay">
                        <div class="work-table">
                            <div class="table-cell">
                                <h3>@gl.Title</h3>
                                <a href="~/Uploads/@gl.Photo" class="gallery">zoom</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            }
      
        
        </div>
    </div>
</div>
<!-- ========== End of Gallery ========== -->
<!-- ========== Blog ========== -->
<div id="blog">
    <!-- ========== Review ========== -->
    <div id="review">
        <div class="heading">
            <h1>Reviews</h1>
            <hr>
        </div>
        <div class="container">
            <div id="owl-review" class="owl-carousel owl-theme">
                @foreach (Review rw in ViewBag.Reviews)
                {
                <div class="col-sm-12">
                    <div class="item">
                        <div class="single-review">
                            <img src="~/Uploads/@rw.Photo" alt="" class="img-responsive img-circle">
                            <div class="subtitle">@rw.SubTitle</div>
                            <p class="stars">
                                <i class="fa @rw.Icon1"></i>
                                <i class="fa @rw.Icon2"></i>
                                <i class="fa @rw.Icon3"></i>
                                <i class="fa @rw.Icon4"></i>
                                <i class="fa @rw.Icon5"></i>
                            </p>
                            <p class="description">@rw.Title</p> <!-- Edit  -->
                            <p class="name">&mdash; @rw.SubTitle</p> <!-- Edit  -->
                        </div>
                    </div>
                </div>

                }
      
          
            </div>
        </div>
    </div>
    <!--=============== End of Review ==============-->
    <div class="heading">
        <h1>Recent Posts</h1>
        <hr>
    </div>
    <div class="container">
        <div class="row text-center">

            @foreach(Post ps in ViewBag.Posts)
            {
                 <div class="col-xs-12 col-sm-6 col-md-4">
                <div class="single-blog wow fadeIn" data-wow-delay="0.2s">
                    <a href="single-post.html" target="_blank"><img src="~/Uploads/@ps.Photo" alt="image" class="img-responsive"></a>
                    <div class="post-description">
                        <span><i class="fa fa-calendar"></i> @ps.Date</span>
                        <span><i class="fa fa-comments"></i> @ps.Comment</span>
                    </div>
                    <div class="subtitle">@ps.Title</div>
                    <p>@ps.Content</p>
                    <a href="single-post.html" target="_blank" class="blog-btn">Read More</a>
                </div>
            </div>
            }
   
        </div>
    </div>
</div>
<!-- ========== End Of Blog ========== -->
<!-- ========== Contact ========== -->
<div id="contact">
    <div class="contact-bg">
        <div class="heading">
            <h1>Contact Us</h1>
            <hr>
        </div>
        <div class="container">
            <h3>For any Improvements, please write to us.</h3>
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <form id="form" action="http://mehulp.ml/expresso/php/contact.php" method="POST">
                        <input type="text" id="name" name="name" size="40" class="contact-text mb-10" placeholder="Your Name">
                        <br>
                        <input type="email" name="email" size="40" class="contact-text mt-20 mb-10" placeholder="Your email address">
                        <br>
                        <input type="text" name="subject" size="40" class="contact-text mt-20 mb-10" placeholder="Subject">
                        <br>
                        <textarea name="message" cols="40" rows="10" class="contact-message mt-20 mb-10" placeholder="Message"></textarea>
                        <br>
                        <input type="submit" value="SEND MESSAGE" class="send-btn mt-20">
                    </form>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div id="map"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- ========== Partners ========== -->
    <div id="partners" class="owl-carousel">
        @foreach (Partner pt in ViewBag.Partners)
        {
           <div class="item"><a href="#"><img src="~/Uploads/@pt.Photo" alt="image"></a></div>
        }
    


    </div>
</div>
